<h1>List of Movies (<%= @movies.count %>)</h1>

<ul>
  <% @movies.each do |movie| %>
  <li>
    <a href="http://localhost:3000/movies/<%= movie.id %>"><%= movie.title %></a>
    (<%= movie.year %>)
    <a href="http://localhost:3000/delete_movie/<%= movie.id %>">Delete this movie</a>
  </li>
  <% end %>
</ul>

